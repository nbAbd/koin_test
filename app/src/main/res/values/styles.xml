<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="SeparatorStyle">
        <item name="color">@color/separator</item>
        <item name="alpha">1</item>
    </style>

    <style name="ThemeDialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="OutlinedClickableTextView_15" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/indigo_200</item>
        <item name="android:background">@drawable/button_bg_with_gradient_stroke</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MenuItem.MaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:padding">12dp</item>
        <item name="iconPadding">16dp</item>
        <item name="iconTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:textAppearance">@style/MenuItemTextAppearance</item>
        <item name="enforceTextAppearance">@style/MenuItemTextAppearance</item>
        <item name="backgroundTint">@color/selector_menu_item</item>
    </style>

    <style name="MenuItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="MenuMaterialButton.ShapeAppearance.Top" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeTopRight">14dp</item>
    </style>

    <style name="MenuMaterialButton.ShapeAppearance.Bottom" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">14dp</item>
        <item name="cornerSizeBottomRight">14dp</item>
    </style>

    <style name="PermissionDialogButton.Disallowed" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/mountain_fig</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/PermissionDialogButton.ShapeAppearance</item>
        <item name="android:textAppearance">@style/PermissionDialogButton.TextAppearance</item>
        <item name="enforceTextAppearance">@style/PermissionDialogButton.TextAppearance</item>
    </style>

    <!--Permission dialog button-->
    <style name="PermissionDialogButton.Allowed" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="backgroundTint">@color/flying_fish_blue</item>
        <item name="shapeAppearance">@style/PermissionDialogButton.ShapeAppearance</item>
        <item name="android:textAppearance">@style/PermissionDialogButton.TextAppearance</item>
        <item name="enforceTextAppearance">@style/PermissionDialogButton.TextAppearance</item>
    </style>

    <style name="PermissionDialogButton.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="PermissionDialogButton.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_25dp</item>
    </style>

    <!-- Insert event dialog-->
    <style name="InsertEventButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:inset">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Log fragment insert button-->
    <style name="InsertEventButton_Blue" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:inset">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/selector_button_blue</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>