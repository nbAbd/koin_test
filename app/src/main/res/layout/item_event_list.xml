<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/_50dp"
    android:layout_columnWeight="6"
    android:divider="@drawable/gradient_separator"
    android:gravity="center"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:background="@color/mirage"
    tools:ignore="MissingConstraints">

    <RelativeLayout
        android:id="@+id/eventTypeWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button_bg_with_gradient_stroke"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:backgroundTint="@color/blue"
            tools:text="@string/driving" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="spread"
        tools:text="01:55:33" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="spread"
        tools:text="0h 5m 13s" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_tr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="spread"
        tools:text="none" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_sh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="spread"
        tools:text="none" />

    <RelativeLayout
        android:id="@+id/eventEditButtonWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constrainedWidth="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/event_edit_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="12sp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="@string/edit"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/blue"
            app:iconPadding="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Button.50"
            tools:text="edit" />
    </RelativeLayout>
</LinearLayout>