<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.button.MaterialButtonToggleGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toggleGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/_40dp"
    android:divider="?android:attr/dividerVertical"
    android:elevation="1dp"
    android:orientation="horizontal"
    android:showDividers="middle"
    app:selectionRequired="true"
    app:singleSelection="true">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonOff"
        style="@style/BluetoothOnOffButton"
        android:layout_width="79dp"
        android:layout_height="52dp"
        android:text="@string/off"
        app:backgroundTint="@color/selector_off_button"
        app:shapeAppearance="@style/BluetoothOnOffShapeAppearanceLeft" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonOn"
        style="@style/BluetoothOnOffButton"
        android:layout_width="79dp"
        android:layout_height="52dp"
        android:text="@string/on"
        android:textColor="@color/selector_on_off_text"
        app:backgroundTint="@color/selector_on_button"
        app:shapeAppearance="@style/BluetoothOnOffShapeAppearanceRight" />
</com.google.android.material.button.MaterialButtonToggleGroup>